<%  include ../partials/header.ejs %>

<div class="container new-campground">    
           
        <h1>Add new comment to <%=campground.name%></h1>

        <div class="form-add-new">            
            <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
                <input class="form-control" type="text"  placeholder="text" name="comment[text]">
                <input class="form-control" type="text"  placeholder="author" name="comment[author]">
                <button class="btn btn-lg btn-primary btn-block" >Submit</button>  
            </form>
        </div>

        <p class="btn btn-lg"><a href="/campgrounds">Go Back</a></p>

</div>

