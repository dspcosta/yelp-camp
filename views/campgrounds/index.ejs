<%  include ../partials/header.ejs %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">                
                <h1>You are in the campgrounds page!!</h1>    
                <p>View our hand-picked campgrounds from all over the world</p>
                <p class="btn btn-lg"><a href="/campgrounds/new">Add a new campground!</a></p>
            </div>
        </header>

        <div class="row text-center">
            <%campgrounds.forEach(function(element){%>
                <div class="col-xl-4 col-md-6 col-sm-12 camp-img">
                    <figure>
                        <div class="img-thumbnail">
                            <img src="<%=element.image%>" alt="Camp image!"> 
                            <div class="caption">
                                <h4><%=element.name%></h4>                    
                            </div>   
                            <p>
                                <a href="/campgrounds/<%=element._id%>" class="btn btn-primary">More info!</a>
                            </p>                     
                        </div>
                    </figure>                    
                </div>
            <%});%>
        </div>
    </div>

<%  include ../partials/footer.ejs %>